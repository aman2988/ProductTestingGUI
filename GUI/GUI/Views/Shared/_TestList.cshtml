@model IEnumerable<GUI.Data.Models.Test>
@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table border mb-0">
        <thead class="table-light fw-semibold">
            <tr class="align-middle">
                <th class="text-center">
                    <svg class="icon">
                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-check"></use>
                    </svg>
                </th>
                <th>Individual Test</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var test in Model)
                {
                    <tr class="align-middle">
                        <td class="text-center">
                            <input id=@("checkbox-" + test.ProductId + "-" + test.Id) class="checkbox" type="checkbox" />
                            @*<div class="avatar avatar-md"><img class="avatar-img" src="~/assets/img/avatars/1.jpg" alt="user@email.com"><span class="avatar-status bg-success"></span></div>*@
                        </td>
                        <td>
                            <div><button type="button" disabled="disabled" id=@("itest-" + test.ProductId + "-" + test.Id) class="btn btn-outline-primary btn-itest">@test.TestName</button></div>
                            @* <div class="small text-medium-emphasis"><span>New</span> | Registered: Jan 1, 2020</div>*@
                        </td>
                        <td>
                            <div class="clearfix">
                                <div class="float-start">
                                    <div class="fw-semibold"></div>
                                </div>
                                <div class="float-end"><small id=@("status" + "-" + test.ProductId + "-" + test.Id) class="text-medium-emphasis status"></small></div>
                            </div>
                            <div class="progress progress-thin">
                                <div id=@("pbar" + "-" + test.ProductId + "-" + test.Id) class="progress-bar" role="progressbar" style="width: 100%;display:none;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="align-middle">
                    <td class="text-center" colspan="4">
                        No tests found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

